<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecord">

    <ImageButton
        android:id="@+id/viewrecord_edit"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/editimg" />

    <ImageButton
        android:id="@+id/viewrecord_delete"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@id/viewrecord_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deleteimg2" />

    <ImageView
        android:id="@+id/viewrecord_icon"
        android:layout_width="124dp"
        android:layout_height="127dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="143dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hi" />

    <TextView
        android:id="@+id/viewrecord_description"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@+id/viewrecord_icon"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_edit"
        tools:text="Description" />

    <TextView
        android:id="@+id/viewrecord_amount"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/viewrecord_icon"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_description"
        tools:text="Amount" />

    <TextView
        android:id="@+id/viewrecord_type"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/viewrecord_icon"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_amount"
        tools:text="type" />

    <TextView
        android:id="@+id/viewrecord_date"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toRightOf="@id/viewrecord_icon"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_type"
        tools:text="Date" />

    <TextView
        android:id="@+id/viewrecord_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="10dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_date" />

    <ImageView
        android:id="@+id/viewrecord_image"
        android:layout_width="190dp"
        android:layout_height="168dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewrecord_location"
        app:srcCompat="@drawable/categoryimg" />

</androidx.constraintlayout.widget.ConstraintLayout>